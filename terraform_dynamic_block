# The word "ingress" must be a valid child block name that the resource (aws_security_group) already understands. The below works because "ingress" in "dynamic "ingress"" is a known block for aws_security_group
provider "aws" {
  region = "us-east-1"
}

resource "aws_security_group" "mysg" {
  name        = "terraform-sg"
  description = "It has different ports"

  dynamic "ingress" {
    for_each = var.ports
    content {
      from_port   = ingress.value
      to_port     = ingress.value
      protocol    = "tcp"
      cidr_blocks = ["0.0.0.0/0"]
    }
  }
}

variable "ports" {
  type    = list(number)
  default = [22, 80, 3306, 8080]
}
